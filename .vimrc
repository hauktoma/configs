set t_Co=256
set nocompatible
set exrc
set history=1000
set backspace=2
set nojoinspaces
set ruler
set showcmd
set showmatch
set hlsearch
set smartindent
set shiftwidth=3
set tabstop=3
set smarttab
set expandtab
set wildmenu
set textwidth=70

set nocursorcolumn
set cursorline
syntax sync minlines=256

set background=dark
colorscheme solarized
syntax on
set number

set encoding=utf8

" For faster navigation in splitted windows
noremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
